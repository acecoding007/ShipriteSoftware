<local:CommonWindow x:Name="ContactManager_Window" x:Class="ContactManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SHIPRITE"
        mc:Ignorable="d"
        xmlns:wpf="http://wpfcontrols.com/"
        xmlns:toolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
        
        Style="{DynamicResource BaseWindow}"
        WindowStartupLocation = "{StaticResource BaseWSL}"
        Loaded="Window_Loaded"
        Initialized="Window_Initialized">

    <Grid Style="{DynamicResource ResourceKey=BaseGrid}" >

        <Viewbox Style="{DynamicResource BaseViewbox}">
            <Grid Style="{DynamicResource BaseViewboxGrid}">

                <Grid Style="{DynamicResource HeaderGrid}" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                    <Grid x:Name="ViewControlGrid" Style="{DynamicResource ViewControlGrid}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="MinimizeButton" Style="{DynamicResource MinimizeButton}" Click="MinimizeButton_Click">
                            <Image x:Name="Minimize_Image" Style="{DynamicResource MinimizeImage}"/>
                        </Button>
                        <Button x:Name="MaximizeButton" Style="{DynamicResource MaximizeButton}" Click="MaximizeButton_Click">
                            <Image x:Name="Maximize_Image" Style="{DynamicResource MaximizeImage}"/>
                        </Button>
                        <Button x:Name="CloseButton" Style="{DynamicResource CloseButton}" Click="CloseButton_Click">
                            <Image x:Name="Close_Image" Style="{DynamicResource CloseImage}"/>
                        </Button>
                    </Grid>
                </Grid>

                <!--Navigation Grid-->
                <Grid x:Name="NavigationGrid" Style="{DynamicResource ControlGrid}" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Style="{DynamicResource ControlGridColumn}"/>
                        <ColumnDefinition Style="{DynamicResource ControlGridColumn}"/>
                        <ColumnDefinition Style="{DynamicResource ControlGridColumn}"/>
                        <ColumnDefinition Style="{DynamicResource ControlGridColumn}"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="BackButton" Style="{DynamicResource ControlButton_Back}" Click="BackButton_Click">
                        <Image x:Name="Back_Icon" Style="{DynamicResource ControlButtonImage_Back}"/>
                    </Button>
                    <Button x:Name="ForwardButton" Style="{DynamicResource ControlButton_Forward}" Click="ForwardButton_Click">
                        <Image x:Name="Forward_Icon" Style="{DynamicResource ControlButtonImage_Forward}"/>
                    </Button>
                    <Button x:Name="RefreshButton" Style="{DynamicResource ControlButton_Refresh}" Click="RefreshButton_Click">
                        <Image x:Name="Refresh_Icon" Style="{DynamicResource ControlButtonImage_Refresh}"/>
                    </Button>
                    <Button x:Name="HomeButton" Style="{DynamicResource ControlButton_Home}" Click="HomeButton_Click">
                        <Image x:Name="Home_Icon" Style="{DynamicResource ControlButtonImage_Home}"/>
                    </Button>
                </Grid>

                <!--Header Label Grid-->
                <Grid x:Name="HeaderLabel_Grid" Style="{DynamicResource HeaderLabelGrid}" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Image Style="{DynamicResource HeaderImage}" Source="Resources/Contacts_Light.png"/>
                    <Border Style="{DynamicResource HeaderLabelBorder}" >
                        <Label Content="CONTACT MANAGER" Style="{DynamicResource HeaderLabel}" />
                    </Border>
                </Grid>

                <!--Add, Remove, Save Grid-->
                <Grid x:Name="ChangesGrid" Style="{DynamicResource ControlGrid}" Width="315" HorizontalAlignment="Right" Margin="0,41,25,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Style="{DynamicResource ControlGridColumn}" MaxWidth="180"/>
                        <ColumnDefinition Style="{DynamicResource ControlGridColumn}"/>
                        <ColumnDefinition Style="{DynamicResource ControlGridColumn}"/>
                        <ColumnDefinition Style="{DynamicResource ControlGridColumn}"/>
                        <ColumnDefinition Style="{DynamicResource ControlGridColumn}"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="IDNumber" Grid.Column="0" Content="00000" HorizontalAlignment="Stretch" FontFamily="Arial" FontSize="18" Uid="ID"/>

                    <Button x:Name="AddContact_Button" Grid.Column="2" Grid.ColumnSpan="1" ToolTip="Add New Contact" Style="{StaticResource AddRemoveSave_Style}">
                        <Image Source="Resources/AddNewUser.png"   /> 
                    </Button>
                    <Button x:Name="RemoveContact_Button" Grid.Column="3" ToolTip="Remove Contact" Style="{StaticResource AddRemoveSave_Style}">
                        <Image Source="Resources/Remove.png" Margin="1" />
                    </Button>
                    <Button x:Name="Options_Button" Grid.Column="4" ToolTip="Contact Search Options" Style="{StaticResource AddRemoveSave_Style}">
                        <Image Source="Resources/Gear.png" Margin="1" />
                    </Button>
                </Grid>

                <!--Contact Manager Border-->
                <Border x:Name="ContactManager_Border" Style="{DynamicResource BaseBorder}" >
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.25*"/>
                            <ColumnDefinition Width=".75*"/>
                            <ColumnDefinition Width="1.25*"/>
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.85*"/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <!--Country Selection-->
                            <GroupBox x:Name="CountrySelection_GroupBox" Header="Country Selection" Style="{StaticResource ContactManagerGroupBox_Style}" MinHeight="52" MinWidth="275" Margin="5,0,5,15">
                                <Grid>
                                    <ComboBox x:Name="CountrySelection" Style="{StaticResource ContactManager_ComboBox}" ToolTip="Country Selection" Padding="7,0,5,0" Margin="5,5,39,2"/>
                                    <Button x:Name="SearchCountry_Btn" Margin="319,6,5,3" BorderThickness="0" Uid="Country">
                                        <Image HorizontalAlignment="Center" Height="26" VerticalAlignment="Center" Width="28" Source="Resources/Search.png"/>
                                    </Button>
                                </Grid>
                            </GroupBox>

                            <!--Customer Information-->
                            <GroupBox x:Name="CustomerInformation_GroupBox" Header="Customer Information" Grid.RowSpan="3" Style="{StaticResource ContactManagerGroupBox_Style}" MinWidth="275" MinHeight="85" Margin="5,64,5,15">
                                <Grid Height="65" VerticalAlignment="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="9*"/>
                                        <ColumnDefinition Width="29*"/>
                                        <ColumnDefinition Width="315*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <TextBox x:Name="D0" Text="Company OR Last Name First Name" CaretIndex="200" Style="{StaticResource ContactManager_Textbox}" ToolTip="Company OR Last Name First Name"  Padding="5,0,0,0" Uid="Name" Grid.ColumnSpan="3" TabIndex="0"/>

                                    <Grid Grid.Row="1" Grid.ColumnSpan="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="101*"/>
                                            <ColumnDefinition Width="20*"/>
                                            <ColumnDefinition Width="34*"/>
                                            <ColumnDefinition Width="21*"/>
                                            <ColumnDefinition Width="134*"/>
                                            <ColumnDefinition Width="43*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="D1" Text="First Name" Style="{DynamicResource ContactManager_Textbox}" ToolTip="First Name" Grid.ColumnSpan="4" Uid="FName" TabIndex="1" VerticalContentAlignment="Center" IsTabStop="False"/>

                                        <TextBox x:Name="D2" Text="Last Name" Grid.Column="4" Style="{DynamicResource ContactManager_Textbox}" ToolTip="Last Name" Uid="LName" TabIndex="2" Grid.ColumnSpan="2" VerticalContentAlignment="Center" IsTabStop="False"/>

                                    </Grid>

                                </Grid>
                            </GroupBox>

                            <!--Address Information-->
                            <GroupBox x:Name="AddressInformation_GroupBox" Header="Address Information" Grid.Row="2" Grid.RowSpan="4" Style="{StaticResource ContactManagerGroupBox_Style}" MinWidth="275" MinHeight="85" Margin="5,28,5,6">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition x:Name="Address3_Row" Height="0"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <TextBox x:Name="D4" Text="Address Line 1" Style="{DynamicResource ContactManager_Textbox}" ToolTip="Address Line 1" Uid="Addr1" TabIndex="3"/>
                                    <!--<toolkit:AutoCompleteBox x:Name="D4" Text="Address Line 1" Style="{DynamicResource ContactManager_AutoCompleteBox}" ToolTip="Address Line 1" Uid="Addr1" TabIndex="2" BorderThickness="0"
                                                             FilterMode="StartsWith"
                                                             MinimumPrefixLength="1"
                                                             DataContext="{Binding ElementName=ContactManager_Window}"
                                                             ItemsSource="{Binding Path=AddrSuggestList}"
                                                             SelectedItem="{Binding Path=AddrSuggestSelected, Mode=TwoWay}" VerticalContentAlignment="Center" IsTabStop="True"
                                                             />-->


                                    <TextBox x:Name="D5" Text="Address Line 2" Style="{DynamicResource ContactManager_Textbox}" ToolTip="Address Line 2" Uid="Addr2" TabIndex="4" VerticalContentAlignment="Center" Grid.Row="1" />
                                    <TextBox x:Name="D14" Text="Address Line 3" Style="{DynamicResource ContactManager_Textbox}" ToolTip="Address Line 3" Uid="Addr3" TabIndex="5" VerticalContentAlignment="Center" Grid.Row="2"/>

                                    <Grid Grid.Row="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="119*"/>
                                            <ColumnDefinition Width="57*"/>
                                            <ColumnDefinition Width="81*"/>
                                            <ColumnDefinition Width="96*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="D6" Text="City" Style="{DynamicResource ContactManager_Textbox}" ToolTip="City" Grid.ColumnSpan="2" Uid="City" TabIndex="7" />
                                        <TextBox x:Name="D7" Text="State" Grid.Column="2" Style="{DynamicResource ContactManager_Textbox}" MaxLength="2" ToolTip="State" Uid="State" TabIndex="8" />
                                        <TextBox x:Name="D8" Text="Zip Code" Grid.Column="3" Style="{DynamicResource ContactManager_Textbox}" MaxLength="5" ToolTip="Zip Code" Uid="Zip" TabIndex="6" />
                                    </Grid>
                                </Grid>
                            </GroupBox>

                            <!--Contact Information-->
                            <GroupBox x:Name="ContactInformation_GroupBox" Header="Contact Information" Grid.Row="5" Grid.RowSpan="4" Style="{StaticResource ContactManagerGroupBox_Style}" MinWidth="275" MinHeight="85" Margin="5,37,5,10" >
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="117" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="D9" Text="Home #" Style="{DynamicResource ContactManager_Textbox}" MaxLength="20" ToolTip="Home #" Uid="Phone" TabIndex="9" />
                                        <TextBox x:Name="D10" Text="Work #" Grid.Column="1" Style="{DynamicResource ContactManager_Textbox}" MaxLength="12" ToolTip="Work #" Uid="Phone2" TabIndex="10" />
                                        <TextBox x:Name="D11" Text="Fax #" Grid.Column="2" Style="{DynamicResource ContactManager_Textbox}" MaxLength="12" ToolTip="Fax #" Uid="Fax" TabIndex="11" />
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="83*"/>
                                            <ColumnDefinition Width="35*"/>
                                            <ColumnDefinition Width="149*"/>
                                            <ColumnDefinition Width="10*"/>
                                            <ColumnDefinition Width="17"/>
                                            <ColumnDefinition Width="59*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="D12" Text="Cell #" Style="{DynamicResource ContactManager_Textbox}" MaxLength="12" ToolTip="Cell #" Uid="CellPhone" TabIndex="12" Grid.ColumnSpan="2" />
                                        <ComboBox x:Name="CellCarrier_ComboBox" Grid.Column="2" Style="{StaticResource ContactManager_ComboBox}" SelectedIndex="0" Padding="7,0,0,0" ToolTip="Cell Carrier Selection" Margin="2" Grid.ColumnSpan="4" TabIndex="13" SelectedValuePath="Content" >
                                            <ComboBoxItem Content="Cell Carrier Selection" IsSelected="True" />
                                            <ComboBoxItem Content="AT&amp;T" Style="{StaticResource ContactManager_ComboBoxItem}"/>
                                            <ComboBoxItem Content="Boost Mobile" Style="{StaticResource ContactManager_ComboBoxItem}"/>
                                            <ComboBoxItem Content="Metro PCS" Style="{StaticResource ContactManager_ComboBoxItem}"/>
                                            <ComboBoxItem Content="Sprint" Style="{StaticResource ContactManager_ComboBoxItem}"/>
                                            <ComboBoxItem Content="T-Mobile" Style="{StaticResource ContactManager_ComboBoxItem}"/>
                                            <ComboBoxItem Content="Ting" Style="{StaticResource ContactManager_ComboBoxItem}"/>
                                            <ComboBoxItem Content="Tracfone" Style="{StaticResource ContactManager_ComboBoxItem}"/>
                                            <ComboBoxItem Content="US Cellular" Style="{StaticResource ContactManager_ComboBoxItem}"/>
                                            <ComboBoxItem Content="Verizon" Style="{StaticResource ContactManager_ComboBoxItem}"/>
                                            <ComboBoxItem Content="Virgin Mobile" Style="{StaticResource ContactManager_ComboBoxItem}"/>
                                        </ComboBox>
                                    </Grid>
                                    <TextBox x:Name="D13" Text="Email Address" Grid.Row="3" Style="{DynamicResource ContactManager_Textbox}" ToolTip="Email Address" Uid="EMail" TabIndex="14"/>
                                </Grid>
                            </GroupBox>
                            <GroupBox x:Name="Mailbox_GroupBox" Header="Mailbox" Grid.Row="8" Style="{StaticResource ContactManagerGroupBox_Style}" Margin="5,30,279,5" Grid.RowSpan="2">
                                <TextBox x:Name="D15" Text="Mailbox #" Style="{DynamicResource ContactManager_Textbox}" Margin="0,-2,0,2" Uid="MailboxNo" ToolTip="Mailbox #"/>
                            </GroupBox>

                                <GroupBox x:Name="Account_GroupBox" Header="Account" Grid.Row="8" Style="{StaticResource ContactManagerGroupBox_Style}" Margin="101,30,5,5" Grid.RowSpan="2"  >
                                <Grid>
                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition Width="259*"/>
                                        <ColumnDefinition Width="104*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="D3" Text="Account #" Style="{DynamicResource ContactManager_Textbox}" ToolTip="Account #" Uid="AR" TabIndex="15" Margin="0,-2,0,2"/>
                                    <Button x:Name="CreateAccount" Content="Create Account" Style="{StaticResource POSKeypadButton_Style}" Margin="0,-7,-2,-2" FontSize="12" Grid.Column="1"/>
                                </Grid>
                            </GroupBox>
                        </Grid>

                        <Popup x:Name="SearchOptions_Popup" PlacementTarget="{Binding ElementName=Options_Button}" AllowsTransparency="True" StaysOpen="False" PopupAnimation="Slide" Placement="Bottom">
                            <Border Style="{DynamicResource BaseBorder}" Margin="0" BorderThickness="1" Grid.ColumnSpan="2" Grid.Column="1" Height="165" Width="195" Background="#FFE5E5E5">
                                <Grid>
                                    <Label Content="Select contact search type:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="174" FontWeight="Bold"/>
                                    <RadioButton x:Name="StartsWith_RadioBtn" Content="Starts With" HorizontalAlignment="Left" Margin="42,41,0,0" VerticalAlignment="Top" Width="163"/>
                                    <RadioButton x:Name="Contains_RadioBtn" Content="Contains" HorizontalAlignment="Left" Margin="42,61,0,0" VerticalAlignment="Top" Width="163"/>
                                    <RadioButton x:Name="EndsWith_RadioBtn" Content="Ends With" HorizontalAlignment="Left" Margin="42,81,0,0" VerticalAlignment="Top" Width="163"/>
                                    <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="1" Margin="0,101,-0.4,0" Stroke="Black" VerticalAlignment="Top" Width="194" />
                                    <CheckBox x:Name="AddressAutocomplete_Enabled" Margin="43,129,-23,0" IsChecked="{Binding AutoComplete_Enabled}" Content="Address Autocomplete" RenderTransformOrigin="0.505,0.924" Height="16" VerticalAlignment="Top" />
                                    <Label Content="Enable Autocomplete" HorizontalAlignment="Left" Margin="10,101,0,0" VerticalAlignment="Top" Width="174" FontWeight="Bold"/>
                                </Grid>
                            </Border>
                        </Popup>

                        <Popup x:Name="HotSearch_Popup" PlacementTarget="{Binding ElementName=D0}" AllowsTransparency="True" StaysOpen="False" PopupAnimation="Slide" Placement="Bottom">
                            <Border Style="{DynamicResource BaseBorder}" Margin="0" BorderThickness="1" Grid.ColumnSpan="2" Grid.Column="1" Height="295" Width="370" Background="#FFE5E5E5">
                                <Grid >
                                    <local:CommonListView x:Name="HotSearch_LV" Margin="0,10" BorderThickness="0" Background="#FFE5E5E5">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" Width="0"/>
                                                <GridViewColumn Header="MBX" DisplayMemberBinding="{Binding Mailbox}" Width="55"/>
                                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                                                <GridViewColumn Header="AR" DisplayMemberBinding="{Binding AR}" Width="85" />


                                                <!-- <GridViewColumn Header="Addr1" DisplayMemberBinding="{Binding Addr1}" Width="155" />-->
                                                <!-- <GridViewColumn Header="City" DisplayMemberBinding="{Binding City}" Width="105" />-->
                                                <!-- <GridViewColumn Header="State" DisplayMemberBinding="{Binding State}" Width="35" />-->
                                                <!-- <GridViewColumn Header="Zip" DisplayMemberBinding="{Binding Zip}" Width="45" />-->

                                            </GridView>
                                        </ListView.View>
                                    </local:CommonListView>
                                </Grid>
                            </Border>
                        </Popup>

                        <!-- Address Autocomplete -->
                        <Popup x:Name="AddressAutocomplete_Popup" PlacementTarget="{Binding ElementName=D4}" AllowsTransparency="True" StaysOpen="False" PopupAnimation="Slide" Placement="Bottom">
                            <Border Style="{DynamicResource BaseBorder}" Margin="0" BorderThickness="1" Grid.ColumnSpan="2" Grid.Column="1" Height="200" Width="591" Background="#FFE5E5E5">
                                <Grid >
                                    <local:CommonListView x:Name="Address_List" Margin="0,10" BorderThickness="0" Background="#FFE5E5E5" ItemsSource="{Binding AutoComplete_SuggestList}">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Autocomplete Result" DisplayMemberBinding="{Binding DisplayText}" Width="550"/>
                                                <GridViewColumn Header="HouseNumber" DisplayMemberBinding="{Binding HouseNumber}" Width="0" />
                                                <GridViewColumn Header="Street" DisplayMemberBinding="{Binding Street}" Width="0" />
                                                <GridViewColumn Header="City" DisplayMemberBinding="{Binding City}" Width="0" />
                                                <GridViewColumn Header="State" DisplayMemberBinding="{Binding State}" Width="0" />
                                                <GridViewColumn Header="PostalCode" DisplayMemberBinding="{Binding PostalCode}" Width="0" />
                                            </GridView>
                                        </ListView.View>
                                    </local:CommonListView>
                                </Grid>
                            </Border>
                        </Popup>

                        <Popup x:Name="Marketing_Tools_Popup" PlacementTarget="{Binding ElementName=Marketing_Tools_Btn}" AllowsTransparency="True" StaysOpen="false" PopupAnimation="Slide" Placement="Right">
                            <Border x:Name="Marketing_Tools_GroupBox" Style="{DynamicResource BaseBorder}" Margin="0" BorderThickness="1" Grid.ColumnSpan="2" Grid.Column="1" Height="295" Width="178" Background="#FFE5E5E5">
                                <Grid Margin="0,10,-2,1">
                                    <Border Style="{DynamicResource BaseBorder}" HorizontalAlignment="Left" Height="216" Margin="10,56,0,0" VerticalAlignment="Top" Width="157" RenderTransformOrigin="0.5,0.5" Background="White" BorderThickness="0">

                                        <ListBox x:Name="MarketingTools_ListBox" ItemContainerStyle="{StaticResource ListBoxItem_Color}" HorizontalAlignment="Left" Margin="1,6,0,6" Width="156" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" FontWeight="Bold" BorderThickness="0" Background="White" ClipToBounds="True">

                                            <ListBoxItem Content="Referral"/>
                                            <ListBoxItem Content="Facebook"/>
                                            <ListBoxItem Content="Other Social Network"/>
                                            <ListBoxItem Content="Online Search"/>
                                            <ListBoxItem Content="Internet Ad"/>
                                            <ListBoxItem Content="Print Ad"/>
                                            <ListBoxItem Content="Radio/TV Ad"/>
                                            <ListBoxItem Content="Yellow Pages"/>
                                            <ListBoxItem Content="Other"/>


                                        </ListBox>
                                    </Border>
                                    <Label Content="How did you hear about us?" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="-0.071,0.036" Width="168" FontSize="12" Margin="10,25,0,0"/>
                                    <Label Content="Marketing Tools" HorizontalAlignment="Left" Margin="0,-1,0,0" VerticalAlignment="Top" Width="157" FontWeight="Bold"/>
                                </Grid>
                            </Border>
                        </Popup>

                        <Popup x:Name="Verify_Address_Popup" PlacementTarget="{Binding ElementName=Verify_Address_Btn}" AllowsTransparency="True" StaysOpen="True" PopupAnimation="Slide" Placement="Bottom">
                            <Border x:Name="VerifyAddress_Border" BorderThickness="1" Style="{DynamicResource BaseBorder}" Margin="0" Grid.ColumnSpan="2" Grid.Column="1" Height="323" Width="623" BorderBrush="Black" Background="#FFE5E5E5">
                                <Grid>
                                    <Grid Margin="212,10,10,0" VerticalAlignment="Top" Height="44">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Button x:Name="FedexWebServices_Button" Style="{StaticResource ContactManagerButton_Style}" ToolTip="Fedex Web Services" VerticalContentAlignment="Center" >
                                            <Image Source="Resources/FedEx_logo.png" Margin="2" />
                                        </Button>
                                        <Button x:Name="EndiciaDialAZip_Button" Style="{StaticResource ContactManagerButton_Style}" Grid.Column="1" ToolTip="Endicia Dial-A-Zip" >
                                            <Image Source="Resources/Endicia_Logo.png" Margin="2"/>
                                        </Button>
                                        <Button x:Name="GoogleMaps_Button" Style="{StaticResource ContactManagerButton_Style}" Grid.Column="2" ToolTip="Google Maps" >
                                            <Image x:Name="GoogeMaps_Icon" Source="Resources/GoogleMaps.png" Margin="5" />
                                        </Button>
                                    </Grid>
                                    <Label Content="Address Verification" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="197" FontWeight="Bold" FontSize="14"/>
                                    <Border Style="{DynamicResource BaseBorder}" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="253" Margin="10,59,0,0" VerticalAlignment="Top" Width="197" Background="#FFE5E5E5">
                                        <Grid>
                                            <Label Content="Original Address" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="163" FontWeight="Bold"/>
                                            <TextBox x:Name="Original_Addr1_TextBox" HorizontalAlignment="Left" Height="23" Margin="10,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179"/>
                                            <TextBox x:Name="Original_Addr2_TextBox" HorizontalAlignment="Left" Height="23" Margin="10,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179"/>
                                            <TextBox x:Name="Original_City_TextBox" HorizontalAlignment="Left" Height="23" Margin="10,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179"/>
                                            <TextBox x:Name="Original_State_TextBox" HorizontalAlignment="Left" Height="23" Margin="10,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="59"/>
                                            <TextBox x:Name="Original_ZipCode" HorizontalAlignment="Left" Height="23" Margin="74,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="115"/>
                                            <CheckBox x:Name="Original_Residential_CheckBox" Content="Residential" HorizontalAlignment="Center" Margin="32,174,31,0" VerticalAlignment="Top" Width="132" HorizontalContentAlignment="Center" FontSize="14"/>
                                            <Button x:Name="Original_Apply_Button" Content="Use Original Address" Style="{StaticResource POSKeypadButton_Style}" HorizontalAlignment="Left" Margin="10,207,0,0" VerticalAlignment="Top" Width="179" FontSize="14" Height="37"/>

                                        </Grid>
                                    </Border>

                                    <Border Style="{DynamicResource BaseBorder}" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="253" Margin="212,59,0,0" VerticalAlignment="Top" Width="197" Background="#FFE5E5E5">
                                        <Grid>
                                            <Label Content="Verified Address" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="163" FontWeight="Bold"/>
                                            <TextBox x:Name="Verified_Addr1_TextBox" HorizontalAlignment="Left" Height="23" Margin="10,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179"/>
                                            <TextBox x:Name="Verified_Addr2_TextBox" HorizontalAlignment="Left" Height="23" Margin="10,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179"/>
                                            <TextBox x:Name="Verified_City_TextBox" HorizontalAlignment="Left" Height="23" Margin="10,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179"/>
                                            <TextBox x:Name="Verified_State_TextBox" HorizontalAlignment="Left" Height="23" Margin="10,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="59"/>
                                            <TextBox x:Name="Verified_ZipCode" HorizontalAlignment="Left" Height="23" Margin="74,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="115"/>
                                            <CheckBox x:Name="Verified_Residential_CheckBox" Content="Residential" HorizontalAlignment="Center" Margin="32,174,31,0" VerticalAlignment="Top" Width="132" HorizontalContentAlignment="Center" FontSize="14"/>
                                            <Button x:Name="Verified_Apply_Button" Content="Use Verified Address" Style="{StaticResource POSKeypadButton_Style}" HorizontalAlignment="Left" Margin="10,207,0,0" VerticalAlignment="Top" Width="179" FontSize="14" Height="37"/>

                                        </Grid>
                                    </Border>
                                    <Label Content="Verify with FedEx or Endicia" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top" Width="197"/>
                                    <Border Style="{DynamicResource BaseBorder}" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="253" Margin="414,59,-5,0" VerticalAlignment="Top" Width="197" Background="#FFE5E5E5">
                                        <Grid>
                                            <Label Content="Verification Codes" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="163" FontWeight="Bold"/>
                                            <TextBox x:Name="Verification_Codes_TextBox" HorizontalAlignment="Left" Height="197" Margin="10,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179"/>


                                        </Grid>
                                    </Border>


                                </Grid>
                            </Border>
                        </Popup>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="130*" />
                                <RowDefinition Height="75*" />
                                <RowDefinition Height="83*" />
                                <RowDefinition Height="121*" />
                                <RowDefinition Height="54*"/>
                            </Grid.RowDefinitions>

                            <!--Profile Image-->
                            <Image x:Name="Profile_Image" Source="Resources/Profile_Default.png" Margin="0,5,0,54" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                            <!--Verify Address-->
