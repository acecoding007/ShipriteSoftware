                            <GroupBox x:Name="Submit_GroupBox" Header="Returns to Previous Page" Grid.Row="3" Style="{StaticResource ContactManagerGroupBox_Style}" Margin="0,74,0,5" ContentStringFormat="" Grid.RowSpan="2" >
