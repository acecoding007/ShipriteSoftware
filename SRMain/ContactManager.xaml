                            <Button x:Name="Marketing_Tools_Btn" Content="Marketing Tools" Style="{StaticResource POSKeypadButton_Style}" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" Width="205" Height="35" FontSize="12" Grid.RowSpan="2"/>

