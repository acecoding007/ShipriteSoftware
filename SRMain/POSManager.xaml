<local:CommonWindow x:Name="POS_Window" x:Class="POSManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SHIPRITE"          
        mc:Ignorable="d"
        Style="{DynamicResource BaseWindow}"
        WindowStartupLocation = "{StaticResource BaseWSL}"
        Loaded="Window_Loaded"
        Initialized="Window_Initialized"
        KeyDown="Window_KeyDown">

    <Grid x:Name="Base_Grid" Style="{DynamicResource ResourceKey=BaseGrid}" >

        <Viewbox Style="{DynamicResource BaseViewbox}">

            <Grid Style="{DynamicResource BaseViewboxGrid}" Height="194" Width="131">

                <Grid x:Name="HeaderGrid" Style="{DynamicResource HeaderGrid}" MouseLeftButtonDown="Grid_MouseLeftButtonDown">

                    <Grid x:Name="ViewControlGrid" Style="{DynamicResource ViewControlGrid}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="MinimizeButton" Style="{DynamicResource MinimizeButton}" Click="MinimizeButton_Click">
                            <Image x:Name="Minimize_Image" Style="{DynamicResource MinimizeImage}"/>
                        </Button>
                        <Button x:Name="MaximizeButton" Style="{DynamicResource MaximizeButton}" Click="MaximizeButton_Click">
                            <Image x:Name="Maximize_Image" Style="{DynamicResource MaximizeImage}"/>
                        </Button>
                        <Button x:Name="CloseButton" Style="{DynamicResource CloseButton}" Click="HandleExit">
                            <Image x:Name="Close_Image" Style="{DynamicResource CloseImage}"/>
                        </Button>
                    </Grid>
                    <Label x:Name="StoreName_Lbl" Content=""  Foreground="white" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                </Grid>

                <Grid x:Name="NavigationGrid" Style="{DynamicResource ControlGrid}" Width="270" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Style="{DynamicResource ControlGridColumn}"/>
                        <ColumnDefinition Style="{DynamicResource ControlGridColumn}"/>
                        <ColumnDefinition Style="{DynamicResource ControlGridColumn}"/>
                        <ColumnDefinition Style="{DynamicResource ControlGridColumn}"/>
                        <ColumnDefinition Style="{DynamicResource ControlGridColumn}"/>
                        <ColumnDefinition Style="{DynamicResource ControlGridColumn}"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BackButton" Style="{DynamicResource ControlButton_Back}" Click="HandleExit">
                        <Image x:Name="Back_Icon" Style="{DynamicResource ControlButtonImage_Back}"/>
                    </Button>
                    <Button x:Name="ForwardButton" Style="{DynamicResource ControlButton_Forward}" Click="ForwardButton_Click">
                        <Image x:Name="Forward_Icon" Style="{DynamicResource ControlButtonImage_Forward}"/>
                    </Button>
                    <Button x:Name="RefreshButton" Style="{DynamicResource ControlButton_Refresh}" Click="RefreshButton_Click">
                        <Image x:Name="Refresh_Icon" Style="{DynamicResource ControlButtonImage_Refresh}"/>
                    </Button>
                    <Button x:Name="HomeButton" Style="{DynamicResource ControlButton_Home}" Click="HandleExit">
                        <Image x:Name="Home_Icon" Style="{DynamicResource ControlButtonImage_Home}"/>
                    </Button>
                    <Button x:Name="TicklerButton" Style="{DynamicResource ControlButton}" Click="HandleExit" Grid.Column="4">
                        <Grid>
                            <Label x:Name="Tickler_Count_Lbl" Style="{StaticResource Circular_Label_Notification}" Content="3" Margin="10,-20,-20,10" Panel.ZIndex="1"/>
                            <Image x:Name="Tickler_Icon" Source="Resources/Tickler_Small.png"/>
                        </Grid>
                    </Button>
                    <Button x:Name="TrackPackage_Btn" Grid.Column="5" ToolTip="Track Shipment" Style="{StaticResource AddRemoveSave_Style}">
                        <Image x:Name="Save_Image" Source="Resources/TrackPackage.png"/>
                    </Button>

                </Grid>

                <Grid x:Name="HeaderLabel_Grid" Style="{DynamicResource HeaderLabelGrid}" Margin="0,33,75,0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Image Style="{DynamicResource HeaderImage}" Source="Resources/POS_Light.png"/>
                    <Border Style="{DynamicResource HeaderLabelBorder}" >
                        <Label Content="POINT OF SALE" Style="{DynamicResource HeaderLabel}" Height="44" Margin="0,4" Width="142"/>
                    </Border>
                </Grid>

                <!--Clerk Grid-->
                <Border Margin="832,32,57,501" BorderBrush="white" BorderThickness="0.5" CornerRadius="5">
                    <Grid>
                        <Label Content="Clerk:" Foreground="White" FontFamily="Calibri Light" VerticalContentAlignment="Center" Padding="0" Margin="2,20,85,8" />
                        <Label x:Name="Clerk_Lbl" Content="Admin" Foreground="White" FontFamily="Calibri Light" VerticalContentAlignment="Center" Padding="0" Cursor="" HorizontalContentAlignment="Right" HorizontalAlignment="Right" Width="54" Margin="0,20,42,5" />
                        <Image Source="Resources/Profile_Default.png" Margin="92,2,0,8"/>

                        <Label Content="Drawer ID:" Foreground="White" FontFamily="Calibri Light" VerticalContentAlignment="Center" Padding="0" Margin="2,5,71,23" />
                        <Label x:Name="DrawerID_Lbl" Content="" Foreground="White" FontFamily="Calibri Light" VerticalContentAlignment="Center" Padding="0" Cursor="" HorizontalContentAlignment="Right" Margin="57,5,42,23" />
                    </Grid>
                </Border>

                <!--Contact Info Grid-->
                <Border x:Name="ContactInfo_Border" BorderBrush="white" BorderThickness="0.5" CornerRadius="5" Margin="604,32,197,501">
                    <Grid >
                        <Grid x:Name="ContactInfo_Grid" Width="185" HorizontalAlignment="Right" Margin="0,0,36,0" >
                            <Grid.RowDefinitions>
                                <RowDefinition />

                                <RowDefinition >
                                    <RowDefinition.Style>
                                        <Style TargetType="RowDefinition">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=AccountNo_TxtBox, Path=Content}" Value="">
                                                    <Setter Property="Height" Value="0"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ElementName=AccountNo_TxtBox, Path=Content}" Value="CASH">
                                                    <Setter Property="Height" Value="0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </RowDefinition.Style>
                                </RowDefinition>

                                <RowDefinition >
                                    <RowDefinition.Style>
                                        <Style TargetType="RowDefinition">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=MBX_No_TxtBx, Path=Content}" Value="">
                                                    <Setter Property="Height" Value="0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </RowDefinition.Style>
                                </RowDefinition>
                            </Grid.RowDefinitions>


                            <Label Content="Cust:" Foreground="White" FontFamily="Calibri Light" VerticalContentAlignment="Center" Padding="0" Grid.Row="0" Margin="1,1,0,0"/>
                            <Label x:Name="CustomerName" FontWeight="DemiBold" Content="Cash, Check, Charge" FontSize="13" Foreground="White" FontFamily="Calibri" VerticalContentAlignment="Center" Padding="0" Cursor="" Grid.Row="0" Margin="36,0,0,0" />

                            <Label Content="Acct#:" Foreground="White" FontFamily="Calibri Light" VerticalContentAlignment="Center" Padding="0" Grid.Row="1" Margin="1,0,0,0"/>
                            <Label x:Name="AccountNo_TxtBox" Content="CASH" Foreground="White" FontFamily="Calibri Light" VerticalContentAlignment="Center" Padding="0" Cursor="" Grid.Row="1" Margin="36,0,71,0" />
                            <Label Content="Bal:" Foreground="White" FontFamily="Calibri Light" VerticalContentAlignment="Center" Padding="0" Grid.Row="1" Margin="114,0,48,0" />
                            <Label x:Name="Balance_TxtBox" Content="--------" Foreground="White" FontFamily="Calibri Light" VerticalContentAlignment="Center" Padding="0" Cursor="" Grid.Row="1" Margin="137,0,0,0" />

                            <Label Content="MBX#:" Foreground="White" FontFamily="Calibri Light" VerticalContentAlignment="Center" Padding="0" Grid.Row="2" Margin="1,0,85,0"  />
                            <Label x:Name="MBX_No_TxtBx" Content="" Foreground="White" FontFamily="Calibri Light" VerticalContentAlignment="Center" Grid.Row="2" Margin="31,-5,85,-5" />
                            <Label Content="Exp:" Foreground="White" FontFamily="Calibri Light" VerticalContentAlignment="Center" Padding="0" Grid.Row="2" Margin="105,0,48,0" />
                            <Label x:Name="Mbx_ExpDate_TxtBx" Content="" Foreground="White" FontFamily="Calibri Light" VerticalContentAlignment="Center" Padding="0" Grid.Row="2" Margin="128,0,0,0"/>

                        </Grid>
                        <Button x:Name="ContactOptions" Style="{DynamicResource ControlButton}" ToolTip="Setup Options" HorizontalAlignment="Right" Width="36">
                            <Image x:Name="ContactOptionsImage" Source="Resources/DropDown_White.png" />
                        </Button>
                    </Grid>
                </Border>

                <Border Style="{DynamicResource BaseBorder}">
                    <Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="163*"/>
                                <ColumnDefinition Width="124*"/>
                                <ColumnDefinition Width="201*"/>
                            </Grid.ColumnDefinitions>

                            <!--Sales Receipt GroupBox-->
                            <Border Background="White" CornerRadius="5" Margin="3,52,3,3">
                                <Grid>

                                    <ListBox x:Name="Receipt_LB" Margin="5,34,5,0" BorderThickness="0,2,0,0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" FontSize="12" FontFamily="Courier New" ScrollViewer.VerticalScrollBarVisibility="Visible">

                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                                                <EventSetter Event="MouseDoubleClick" Handler="Receipt_LB_MouseDoubleClick"/>
                                                <EventSetter Event="PreviewGotKeyboardFocus" Handler="SelectCurrent_LB_Item"/>
                                                <Setter Property="Padding" Value="0,0,0,5"/>
                                                <!-- spacing between receipt line items -->
                                            </Style>



                                        </ListBox.ItemContainerStyle>

                                        <ListBox.ItemTemplate>
                                            <DataTemplate>

                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition x:Name="Column_SKU" Width="115" />
                                                        <ColumnDefinition x:Name="Column_Price" Width="70"/>
                                                        <ColumnDefinition x:Name="Column_Qty" Width="38"/>
                                                        <ColumnDefinition x:Name="Column_ExtPrice" Width="66"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Grid.RowDefinitions>
                                                        <RowDefinition/>
                                                        <RowDefinition>
                                                            <RowDefinition.Style>
                                                                <Style>

                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Path=SKU}" Value="NOTE">
                                                                            <Setter Property="RowDefinition.Height" Value="0"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Path=SKU}" Value="MEMO">
                                                                            <Setter Property="RowDefinition.Height" Value="0"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </RowDefinition.Style>
                                                        </RowDefinition>
                                                        <RowDefinition>
                                                            <RowDefinition.Style>
                                                                <Style>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Path=Discount}" Value="0">
                                                                            <Setter Property="RowDefinition.Height" Value="0"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </RowDefinition.Style>
                                                        </RowDefinition>
                                                    </Grid.RowDefinitions>


                                                    <TextBlock Text="{Binding Description}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5"/>

                                                    <TextBlock Text="{Binding SKU}" Grid.Row="1" Grid.Column="0"/>
                                                    <TextBlock Grid.Row="1" Grid.Column="1">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="{Binding UnitPrice, StringFormat=N4}"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding isCOGSview}" Value="True">
                                                                        <Setter Property="Text" Value="{Binding UnitCost, StringFormat=N2}"/>

                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <TextBox x:Name="Receipt_Qty_TxtBx" Text="{Binding Quantity}" Margin="0,-1,-1,0" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Stretch" TextAlignment="Center" VerticalContentAlignment="Center" LostKeyboardFocus="Receipt_Qty_TxtBx_LostKeyboardFocus" KeyDown="Receipt_Qty_TxtBx_KeyDown">
                                                        <TextBox.Style>
                                                            <Style TargetType="TextBox">
                                                                <!--ID=0 is New Sale.  Any other ID is a recovered invoice and quantity textbox should not be editable -->
                                                                <Setter Property="IsReadOnly" Value="True"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ID}" Value="0">
                                                                        <Setter Property="IsReadOnly" Value="False"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBox.Style>
                                                    </TextBox>

                                                    <TextBlock Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="{Binding ExtPrice, StringFormat=N2}"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding isCOGSview}" Value="True">
                                                                        <Setter Property="Text" Value="{Binding COGS, StringFormat=N2}"/>
                                                                        <Setter Property="Foreground" Value="DarkRed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>


                                                    <TextBlock Text="{Binding Discount, StringFormat='*DISCOUNT* {0}%'}" Grid.Row="2" Grid.Column="0"/>

                                                </Grid>


                                            </DataTemplate>
                                        </ListBox.ItemTemplate>


                                    </ListBox>
                                    <TextBlock x:Name="Description_TxtBlock" Margin="2,3"  HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="320" FontFamily="Courier New" Text=" Description"/>
                                    <TextBlock Margin="2,19,-2,0"  HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="320" FontFamily="Courier New" Text=" SKU#            Price     Qty    Ext.Price"/>
                                </Grid>
                            </Border>






                            <!--Pole Display, SKU Entry, Numerical Keypad-->
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="105*"/>
                                    <RowDefinition Height="358*"/>
                                </Grid.RowDefinitions>

                                <!--Pole Display-->

                                <Grid x:Name="PoleDisplay_Grid" Margin="5,5,5,15">

                                    <!--Pole Display Total-->
                                    <Border Background="Black" CornerRadius="5" BorderThickness="1" Margin="0,0,0,0" BorderBrush="White">
                                        <Grid Margin="0,0,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="51*"/>
                                                <RowDefinition Height="21*"/>
                                            </Grid.RowDefinitions>
                                            <!--<Border Grid.Row="0" Background="Black" CornerRadius="3" BorderThickness="0" Margin="0,0,0,0">
                                                    <TextBox x:Name="PosTotal"  Grid.Row="0" Background="Black" Margin="5,5,5,5" Padding="10,0" Text="$ 0.00" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Foreground="White" FontFamily="Calibri Light" FontSize="40" Focusable="False" IsHitTestVisible="False" IsTabStop="False" ToolTip="POS Total" VerticalScrollBarVisibility="Disabled" RenderTransformOrigin="0.5,0.5" Height="22" VerticalAlignment="Top"/>
                                                </Border>
                                                <Border Grid.Row="1" Background="Black" CornerRadius="3" BorderThickness="0" Margin="0,0,0,0">
                                                    <TextBox x:Name="PosSubtotal"  Grid.Row="0" Background="Black" Margin="5,5,5,5" Padding="10,0" Text="$ 0.00" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Foreground="White" FontFamily="Calibri Light" FontSize="40" Focusable="False" IsHitTestVisible="False" IsTabStop="False" ToolTip="POS Total" VerticalScrollBarVisibility="Disabled" RenderTransformOrigin="0.5,0.5" Height="22" VerticalAlignment="Top"/>
                                                </Border>-->
                                            <TextBox x:Name="PoleDisplay_Total"  Grid.Row="0" Background="Black" Margin="3,3,3,3" Padding="10,0" Text="$ 0.00" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Foreground="White" FontFamily="Calibri Light" FontSize="32" Focusable="False" IsHitTestVisible="False" IsTabStop="False" ToolTip="POS Total" VerticalScrollBarVisibility="Disabled" BorderThickness="1"/>
                                            <TextBox x:Name="PoleDisplay_Subtotal"  Grid.Row="1" Background="Black" Margin="3,3,3,3" Padding="10,0" Text="SubTotal:                              Sales Tax:" VerticalContentAlignment="Center" Foreground="White" FontFamily="Calibri Light" FontSize="12" Focusable="False" IsHitTestVisible="False" IsTabStop="False" ToolTip="POS SubTotal" VerticalScrollBarVisibility="Disabled"  BorderThickness="0"/>
                                        </Grid>
                                    </Border>

                                </Grid>


                                <!--SKU Search, Keypad-->
                                <GroupBox x:Name="SKUSearch_GroupBox" Style="{StaticResource POSManagerGroupBox_Style}" Header="SKU Search" Margin="5,91,10,104" Grid.RowSpan="2" >
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40*"/>
                                            <RowDefinition Height="275*"/>
                                        </Grid.RowDefinitions>

                                        <!--SKU SearchBox-->
                                        <Border CornerRadius="2" Background="White" BorderBrush="White" BorderThickness="0" Margin="10,0,10,5" >
                                            <Grid x:Name="SearchGrid" VerticalAlignment="Center" Background="White" Margin="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="35*"/>
                                                    <ColumnDefinition Width="256*"/>
                                                </Grid.ColumnDefinitions>
                                                <Image HorizontalAlignment="Center" Height="20" VerticalAlignment="Center" Width="20" Source="Resources/Search.png" Margin="5" />
                                                <TextBox x:Name="DInput" Grid.Column="1" Text="Type here to search" FontFamily="Calibri Light" FontSize="14" Foreground="#FF78777F" BorderThickness="0" VerticalContentAlignment="Center" Padding="5,0,0,0" MaxLines="1" MaxLength="35" Margin="5,0,0,0" CharacterCasing="Upper" />
                                            </Grid>
                                        </Border>


                                        <!--Keypad-->
                                        <Grid Grid.Row="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>

                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>

                                            <Button x:Name="Keypad_7" Style="{StaticResource POSKeypadButton_Style}" Content="7"/>
                                            <Button x:Name="Keypad_8" Grid.Column="1" Style="{StaticResource POSKeypadButton_Style}" Content="8"/>
                                            <Button x:Name="Keypad_9" Grid.Column="2" Style="{StaticResource POSKeypadButton_Style}" Content="9"/>
                                            <Button x:Name="Keypad_DEL" Grid.Column="3" Style="{StaticResource POSKeypadButton_Style}" Content="DEL" FontSize="24"/>
                                            <Button x:Name="Keypad_4" Grid.Row="1" Grid.Column="0" Style="{StaticResource POSKeypadButton_Style}" Content="4"/>
                                            <Button x:Name="Keypad_5" Grid.Row="1" Grid.Column="1" Style="{StaticResource POSKeypadButton_Style}" Content="5"/>
                                            <Button x:Name="Keypad_6" Grid.Row="1" Grid.Column="2" Style="{StaticResource POSKeypadButton_Style}" Content="6"/>
                                            <Button x:Name="Keypad_MINUS" Grid.Row="1" Grid.Column="3" Style="{StaticResource POSKeypadButton_Style}" Content="-"/>
                                            <Button x:Name="Keypad_1" Grid.Row="2" Style="{StaticResource POSKeypadButton_Style}" Content="1"/>
                                            <Button x:Name="Keypad_2" Grid.Row="2" Grid.Column="1" Style="{StaticResource POSKeypadButton_Style}" Content="2"/>
                                            <Button x:Name="Keypad_3" Grid.Row="2" Grid.Column="2" Style="{StaticResource POSKeypadButton_Style}" Content="3"/>
                                            <Button x:Name="Keypad_DOT" Grid.Row="2" Grid.Column="3" Style="{StaticResource POSKeypadButton_Style}" Content="."/>
                                            <Button x:Name="Keypad_0" Grid.Row="3" Style="{StaticResource POSKeypadButton_Style}" Content="0"/>
                                            <Button x:Name="Keypad_00" Grid.Row="3" Grid.Column="1" Style="{StaticResource POSKeypadButton_Style}" Content="00"/>
                                            <Button x:Name="Keypad_ENTER" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Style="{StaticResource POSKeypadButton_Style}" Content="ENTER" FontSize="24"/>
                                        </Grid>


                                    </Grid>
                                </GroupBox>
                            </Grid>

                            <!--Clerk Info-->


                            <!--Function Buttons-->
                            <!--Function Buttons-->
                            <GroupBox x:Name="FunctionButton_GroupBox" Style="{StaticResource POSManagerGroupBox_Style}" Header="Function Buttons" Margin="5,359,5,5" Grid.Column="1" Grid.ColumnSpan="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition  Width="115"/>

                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>

                                    </Grid.RowDefinitions>

                                    <Button x:Name="Memo_Button" Style="{StaticResource POSFunctionButton_Style}" ToolTip="Add Memo" Grid.Column="3">
                                        <StackPanel>
                                            <Image x:Name="Memo_Icon" Source="Resources/Memo.png"  Height="30" />
                                            <TextBlock FontSize="12" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Height="28" ><Run Text="  Add"/><LineBreak/><Run Text="Memo"/></TextBlock>
                                        </StackPanel>
                                    </Button>

                                    <Button x:Name="HoldInvoice_Button" Grid.Column="0" Style="{StaticResource POSFunctionButton_Style}" ToolTip="Hold/Quote Invoice">
                                        <StackPanel>
                                            <Image Source="Resources/HoldInvoice.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" />
                                            <TextBlock FontSize="12" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="2,0" Height="30" ><Run Text="  Hold"/><LineBreak/><Run Text="Invoice"/></TextBlock>
                                        </StackPanel>
                                    </Button>

                                    <Button x:Name="QuoteInvoice_Button" Grid.Column="1" Style="{StaticResource POSFunctionButton_Style}" ToolTip=" Print Quote">
                                        <StackPanel>
                                            <Image Source="Resources/Quote.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" />
                                            <TextBlock FontSize="12" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="2,0" Height="30" ><Run Text=" Print"/><LineBreak/><Run Text="Quote"/></TextBlock>
                                        </StackPanel>
                                    </Button>


                                    <Button x:Name="InvoiceLookup_Button" Grid.Column="2" Style="{StaticResource POSFunctionButton_Style}" ToolTip="Invoice Lookup">
                                        <StackPanel>
                                            <Image Source="Resources/InvoiceLookup.png" Height="30" />
                                            <TextBlock Grid.Column="4" FontSize="12" Foreground="White" Height="30" Width="35"><Run Text="Invoice"/><LineBreak/><Run Text="History"/></TextBlock>
                                        </StackPanel>

                                    </Button>

                                    <Button x:Name="Contacts_Button" Grid.Column="4"  Style="{StaticResource POSFunctionButton_Style}" ToolTip="Contact Manager">
                                        <StackPanel>
                                            <Image Source="Resources/Contacts_Light.png" Height="30" />
                                            <TextBlock Grid.Column="4" FontSize="12" Foreground="White" Height="30" Width="50" Margin="-1,0,0,0"><Run Text="Customer"/><LineBreak/><Run Text="  Lookup"/></TextBlock>
                                        </StackPanel>
                                    </Button>

                                    <Button x:Name="ItemDiscount_Button" Grid.Column="6" Style="{StaticResource POSFunctionButton_Style}" ToolTip="Item Discount">
                                        <StackPanel>
                                            <Image Source="Resources/ItemDiscount.png" Height="32" />
                                            <TextBlock FontSize="12" Foreground="White" Height="30" Width="50"><Run Text="    Apply"/><LineBreak/><Run Text=" Discount"/></TextBlock>
                                        </StackPanel>
                                    </Button>

                                    <Button x:Name="ChangeTax_Button" Grid.Column="7" Style="{StaticResource POSFunctionButton_Style}" ToolTip="Change Tax">
                                        <StackPanel>
                                            <Image Source="Resources/ChangeTax.png" Height="30" />
                                            <TextBlock Grid.Column="4" FontSize="12" Foreground="White" Height="30" Width="36"><Run Text="Change"/><LineBreak/><Run Text="   Tax"/></TextBlock>
                                        </StackPanel>
                                    </Button>

                                    <Button x:Name="Quantity_Button" Grid.Column="8" Style="{StaticResource POSFunctionButton_Style}" ToolTip="Change Quantity">
                                        <StackPanel>
                                            <Image Source="Resources/Quantity.png" Height="30" />
                                            <TextBlock Grid.Column="4" FontSize="12" Foreground="White" Height="30" Width="42" ><Run Text="Change"/><LineBreak/><Run Text="Quantity"/></TextBlock>
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="ChangePrice_Button" Grid.Column="5" Style="{StaticResource POSFunctionButton_Style}" ToolTip="Change Price">
                                        <StackPanel>
                                            <Image Source="Resources/ChangePrice.png" Height="34" Width="45" />
                                            <TextBlock Grid.Column="4" FontSize="12" Foreground="White" Height="30" Width="37" ><Run Text="Change"/><LineBreak/><Run Text="  Price"/></TextBlock>
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="ProcessTransaction_Button" Grid.Column="11" Grid.Row="1" Style="{StaticResource POSFunctionButton_Style}" ToolTip="Process Transaction">
                                        <StackPanel>
                                            <Image Source="Resources/Receipt.png" Height="30" />
                                            <TextBlock x:Name="CashOut_TxtBx" Grid.Column="4" FontSize="12" Foreground="White" Height="30" Width="48" FontWeight="Bold"><Run Text="   CASH"/><LineBreak/><Run Text="    OUT"/></TextBlock>
                                        </StackPanel>
                                    </Button>

                                </Grid>
                            </GroupBox>

                            <!--SKU Buttons-->
                            <GroupBox x:Name="SKUButton_GroupBox" Style="{StaticResource POSManagerGroupBox_Style}" Header="SKU Buttons" Margin="0,0,5,104" Grid.Column="2" >
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35*"/>
